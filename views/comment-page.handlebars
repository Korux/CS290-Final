<div id="main" >
		<div id = title-for-comment>
			{{title}}
		</div>
		<button id = "back-button">Back</button>
		<div id="pic">
			<div id="pic_box1">
			<img id="pic_img"  onclick="showBigPic()" src={{data}} />
			</div>
			<br />
			<div class = "created-by">
				Created By:
			</div>
			<div id = "author-comment">
				  {{creator}}
			</div>
		</div>
		<div id = "all-side-content">
		<div class = "comment-title">
			Comments
		</div>
		<div id="txt_main">
			<div id="TextArea">
				{{#each text}}
					{{this}}<br/><br/>
				{{/each}}
			</div>
			<br />
			<div id="good_bad">
				<div class="good_bad_box1">
					<img id="good_img" src="good.png" style="height:50px;width:50px" onclick="Good(true)" />
					<lable id="good_count">{{goodRating}}</label>
				</div>
				<div class="good_bad_box2">
					<img id="bad_img" src="bad.png" style="height:50px;width:50px;" onclick="Bad(true)" />
					<lable id="bad_count">{{badRating}}</label>
				</div>
			</div>
			<div class = "author-for-comment">
					Author:
			</div>
			<div style="min-width:400px;margin-top:30px;">
				<input id="commentator" placeholder="Name Goes Here" value=""/>
				<input id="txt_pl" placeholder="Comment Goes Here..." type="text" />
				<input id="btn_ok" type="submit" value="Submit"  onclick="comment()"/>&nbsp;&nbsp;&nbsp;
			</div>
		</div>
</div>
</div>
<div id="modelDiv" style="background-color: #fbfafd; position: absolute; left: 50%; top: 50%; transform: translate(-50%,-50%);  border-radius: 10px; height: 400px; display:none;z-index:10000">
    <div>
		<img id="big_pic_img" src="" />
	</div>
</div>
<div id="cover"></div>
